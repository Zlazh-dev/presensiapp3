NODE_ENV=development
PORT=5000

# Database
# Use 'localhost' for local dev, 'postgres' for Docker Compose
DB_HOST=localhost
DB_PORT=5432
DB_NAME=presensi_db
DB_USER=presensi_user
DB_PASSWORD=presensi_password

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Geofence (Default school location)
GEOFENCE_LAT=-6.2088
GEOFENCE_LNG=106.8456
GEOFENCE_RADIUS=100

# Working Hours (Default)
WORK_START_TIME=07:00
WORK_END_TIME=16:00

# Auto-Seed (set to 'true' to seed database on startup - ONLY for initial setup)
# Once data exists, keep this false or unset to preserve data
AUTO_SEED=false
